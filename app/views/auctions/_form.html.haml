= form_for @auction do |f|
  - if @auction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@auction.errors.count, "error")} prohibited this auction from being saved:"
      %ul
        - @auction.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control"
  .form-group
    = f.label :details
    = f.text_area :details, class: "form-control"
  .form-group
    = f.label :ends_on
    = f.datetime_select :ends_on, class: "form-control"
  .form-group
    = f.label :reserve_price
    = f.text_field :reserve_price, class: "form-control"
  .actions
    = f.submit 'Save', class: "btn btn-primary"
